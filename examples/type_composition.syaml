---!syaml/v0
---schema
PositiveNumber:
  type: number
  exclusiveMinimum: 0
StereoVisionEye:
  type: object
  properties:
    agent_physical_radius:
      type: PositiveNumber
      maximum: 25
    baseline:
      type: PositiveNumber

---data
agent:
  sensors:
    stereo_vision:
      eye <StereoVisionEye>:
        agent_physical_radius: 10.0
        baseline: 0.4
