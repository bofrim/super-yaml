{
  "name": "SYAML",
  "scopeName": "source.syaml",
  "patterns": [
    {
      "match": "^\\s*---!syaml\\/v0\\s*$",
      "name": "keyword.control.syaml"
    },
    {
      "match": "^\\s*---(meta|schema|data)\\s*$",
      "name": "keyword.control.section.syaml"
    },
    {
      "match": "#.*$",
      "name": "comment.line.number-sign.syaml"
    },
    {
      "match": "\\b(env\\.[A-Za-z_][\\w.]*)\\b",
      "name": "variable.other.env.syaml"
    },
    {
      "match": "\\$\\{[^}]+\\}",
      "name": "meta.interpolation.syaml"
    },
    {
      "match": "\\b(true|false|null)\\b",
      "name": "constant.language.syaml"
    },
    {
      "match": "\\b-?\\d+(?:\\.\\d+)?\\b",
      "name": "constant.numeric.syaml"
    },
    {
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.syaml"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.syaml"
        }
      },
      "name": "string.quoted.double.syaml",
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.syaml"
        },
        {
          "match": "\\$\\{[^}]+\\}",
          "name": "meta.interpolation.syaml"
        }
      ]
    },
    {
      "begin": "'",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.syaml"
        }
      },
      "end": "'",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.syaml"
        }
      },
      "name": "string.quoted.single.syaml"
    },
    {
      "captures": {
        "1": {
          "name": "entity.name.tag.syaml"
        },
        "2": {
          "name": "entity.name.type.syaml"
        }
      },
      "match": "^\\s*([^:#\\n<][^:#\\n]*?)\\s*<\\s*([A-Za-z_][\\w.]*)\\s*>\\s*:(?=\\s|$)"
    },
    {
      "captures": {
        "1": {
          "name": "entity.name.type.class.syaml"
        }
      },
      "match": "^\\s*([A-Z][\\w.]*)\\s*:(?=\\s|$)"
    },
    {
      "captures": {
        "1": {
          "name": "variable.other.property.syaml"
        },
        "2": {
          "name": "support.type.builtin.syaml"
        },
        "3": {
          "name": "keyword.operator.optional.syaml"
        },
        "4": {
          "name": "support.type.builtin.syaml"
        },
        "5": {
          "name": "keyword.operator.optional.syaml"
        },
        "6": {
          "name": "support.type.builtin.syaml"
        },
        "7": {
          "name": "keyword.operator.optional.syaml"
        }
      },
      "match": "((?:^\\s*|[{},]\\s*)type\\s*:\\s*)(?:\"(string|integer|number|boolean|object|array|null)(\\?)?\"|'(string|integer|number|boolean|object|array|null)(\\?)?'|(string|integer|number|boolean|object|array|null)(\\?)?)"
    },
    {
      "captures": {
        "1": {
          "name": "variable.other.property.syaml"
        },
        "2": {
          "name": "entity.name.type.syaml"
        },
        "3": {
          "name": "keyword.operator.optional.syaml"
        },
        "4": {
          "name": "entity.name.type.syaml"
        },
        "5": {
          "name": "keyword.operator.optional.syaml"
        },
        "6": {
          "name": "entity.name.type.syaml"
        },
        "7": {
          "name": "keyword.operator.optional.syaml"
        }
      },
      "match": "((?:^\\s*|[{},]\\s*)type\\s*:\\s*)(?:\"([A-Za-z_][\\w.]*)(\\?)?\"|'([A-Za-z_][\\w.]*)(\\?)?'|([A-Za-z_][\\w.]*)(\\?)?)"
    },
    {
      "captures": {
        "1": {
          "name": "variable.other.property.syaml"
        },
        "2": {
          "name": "support.type.builtin.syaml"
        },
        "3": {
          "name": "keyword.operator.optional.syaml"
        },
        "4": {
          "name": "support.type.builtin.syaml"
        },
        "5": {
          "name": "keyword.operator.optional.syaml"
        },
        "6": {
          "name": "support.type.builtin.syaml"
        },
        "7": {
          "name": "keyword.operator.optional.syaml"
        }
      },
      "match": "^(\\s*[^:#\\n][^:#\\n]*?\\s*:\\s*)(?:\"(string|integer|number|boolean|object|array|null)(\\?)?\"|'(string|integer|number|boolean|object|array|null)(\\?)?'|(string|integer|number|boolean|object|array|null)(\\?)?)\\s*$"
    },
    {
      "captures": {
        "1": {
          "name": "variable.other.property.syaml"
        },
        "2": {
          "name": "entity.name.type.syaml"
        },
        "3": {
          "name": "keyword.operator.optional.syaml"
        },
        "4": {
          "name": "entity.name.type.syaml"
        },
        "5": {
          "name": "keyword.operator.optional.syaml"
        },
        "6": {
          "name": "entity.name.type.syaml"
        },
        "7": {
          "name": "keyword.operator.optional.syaml"
        }
      },
      "match": "^(\\s*[^:#\\n][^:#\\n]*?\\s*:\\s*)(?:\"([A-Za-z_][\\w.]*)(\\?)?\"|'([A-Za-z_][\\w.]*)(\\?)?'|([A-Za-z_][\\w.]*)(\\?)?)\\s*$"
    },
    {
      "captures": {
        "1": {
          "name": "variable.other.property.syaml"
        }
      },
      "match": "^\\s*([^:#\\n][^:#\\n]*?)\\s*:(?=\\s|$)"
    },
    {
      "match": "(==|!=|<=|>=|&&|\\|\\||[+\\-*/%<>=!])",
      "name": "keyword.operator.syaml"
    }
  ]
}
